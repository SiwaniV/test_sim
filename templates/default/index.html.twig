{% block stylesheet %}
    <style>
    body {
    animation: fadeInAnimation ease 3s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    }
    @keyframes fadeInAnimation {
    0% {
    opacity: 0;
    }
    100% {
    opacity: 1;
    }
    }


    .dropdown-menu {
    border: 1px solid transparent;
    background-color: transparent;

    }

    .dropdown-item {
    color: white;
    transition: .5s;
    }

    .dropdown-item:hover {
    background-color: #2C31AF;
    color: white;
    }

    .navbar-dark .navbar-nav .nav-link {
    color: white;
    transition: .5s;
    }

    .navbar-dark .navbar-nav .nav-link:focus, .navbar-dark .navbar-nav .nav-link:hover {
    color: #2C31AF;
    }

    body{overflow-x: hidden;}

    .kop-item-1 {
    color: #2C31AF;
    }

    .card-item-1 {
    border: 1px solid blue;
    border-radius: 50px;
    }



    .item-opdrachten h4{
    color: #2C31AF;
    }

    .btn.btn-outline-primary {
    border-radius: 20px;
    }




    header {
    background: linear-gradient(-45deg, #4ADEDE, #1CA7EC, #787FF6, #6495ED);
    background-size: 400% 400%;
    animation: gradient 15s ease infinite;
    height: 100vh;
    }


@media (max-width: 768px){
    header{height: 80vh;}
}

    @media (min-width: 768px) and (max-width: 1200px){
        header{height: 95vh;}
    }


    @keyframes gradient {
    0% {
    background-position: 0% 50%;
    }
    50% {
    background-position: 100% 50%;
    }
    100% {
    background-position: 0% 50%;
    }
    }

    .jumbotron {
    border: 1px solid transparent;
    border-radius: 110px;
    background-image: url("https://i.ibb.co/9Ztyqpv/vector-jan-2021-73-generated.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    }



    .card {
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
    }

    .card {
    margin-top: 10px;
    box-sizing: border-box;
    border-radius: 2px;
    background-clip: padding-box;
    min-height:400px;
    }

    .card span.card-title {
    color: #fff;
    font-size: 24px;
    font-weight: 300;
    text-transform: uppercase;
    }

    .card .card-image {
    position: relative;
    overflow: hidden;
    }

    .card .card-image img {
    border-radius: 2px 2px 0 0;
    background-clip: padding-box;
    position: relative;
    z-index: -1;
    }

    .card .card-image span.card-title {
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 16px;
    }

    .card .card-content {
    padding: 16px;
    border-radius: 0 0 2px 2px;
    background-clip: padding-box;
    box-sizing: border-box;
    }

    .card .card-content p {
    margin: 0;
    color: inherit;
    }

    .card .card-content span.card-title {
    line-height: 48px;
    }

    .card .card-action {
    border-top: 1px solid rgba(160, 160, 160, 0.2);
    padding: 16px;
    }

    .floating {
    animation-name: floating;
    animation-duration: 3s;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
    margin-left: 30px;
    margin-top: 5px;
    }

    @keyframes floating {
    0% { transform: translate(0,  0px); }
    50%  { transform: translate(0, 15px); }
    100%   { transform: translate(0, -0px); }
    }



    .card .card-action a {
    color: #ffab40;
    margin-right: 16px;
    transition: color 0.3s ease;
    text-transform: uppercase;
    }

    .card .card-action a:hover {
    color: #ffd8a6;
    text-decoration: none;
    }

    .contact-item-button{color: #21A8C8;}
    .contact-item-button:hover{color: #0B78C8;}

    .two-deck-card  {
    border-radius: 50px;
    border-color: #2C31AF;
    }
    .two-deck-card p  {
    font-family: cursive;
    color: #2C31AF;
    }

    .navbar-dark .navbar-toggler {
    border-color: transparent;
    }

    .navbar-dark .navbar-toggler-icon {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='white' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    .navbar-dark .navbar-toggler-icon:hover {
